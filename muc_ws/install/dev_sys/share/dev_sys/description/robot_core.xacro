<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >
    <xacro:include filename="interial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.3 1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!--Base link-->
    <link name="base_link">
        
    </link>


    <!--Chasis Link-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.25 0.0 0.0"/>

    </joint>
    

    <link name="chassis">
        <visual>
            <origin xyz="0.25 0.0 0.055"/>
            <geometry>
                <box size="0.505 0.392 0.091"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.25 0.0 0.055"/>
            <geometry>
                <box size="0.505 0.392 0.091"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.505" y="0.392" z="0.091">
            <origin xyz="0.25 0.0 0.055"/>
        </xacro:inertial_box>
    </link>


    <!--LEFT WHEEL BACK LINK-->

    <joint name="left_wheel_back_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_back"/>
        <origin xyz="-0.11 0.218 0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="left_wheel_back">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
                <material name="blue"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="-0 0 0" rpy="0 0.0 0.0"/>
        </xacro:inertial_cylinder>
        
    </link>

    <!--LEFT WHEEL FRONT LINK-->

    <joint name="left_wheel_front_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_front"/>
        <origin xyz="0.11 0.218 0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="left_wheel_front">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="-0 0 0" rpy="0 0.0 0.0"/>
        </xacro:inertial_cylinder>
        
    </link>


    <!--RIGHT WHEEL BACK LINK-->

    <joint name="right_wheel_back_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_back"/>
        <origin xyz="-0.11 -0.218 0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="right_wheel_back">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="-0 0 0" rpy="0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--RIGHT WHEEL FRONT LINK-->

    <joint name="right_wheel_front_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_front"/>
        <origin xyz="0.11 -0.218 0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="right_wheel_front">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
                <material name="orange"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
                <material name="orange"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="-0 0 0" rpy="0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>
    
    
</robot>
